<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
    <!-- Define the application name from spring.application.name -->
    <property name="appName" value="${spring.application.name:-CustomerLogin}" />
    <property name="LOG_FILE_PATH" value="/Users/a0s0nmi/IdeaProjects/Apps_v3/Logs/LoginLogs" />

        <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] [%property{appName}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

<!-- Rolling File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Define the active log file with a date-based pattern -->
        <file>${LOG_FILE_PATH}/application.%d{yyyy-MM-dd}.log</file>
        <!-- Define a rolling policy with a date-based filename -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Pattern for the rolled-over files -->
            <fileNamePattern>${LOG_FILE_PATH}/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Number of days to keep history -->
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] [%property{appName}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>>
    
    <!-- Log Levels -->
    <logger name="org.springframework" level="INFO" />
    <logger name="com.ascendpgp.customerlogin" level="DEBUG" />
    <logger name="org.mongodb.driver" level="TRACE" />

